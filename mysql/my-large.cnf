[mysqld]
# Basic Settings
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
bind-address = 127.0.0.1

# Large Server Memory Settings (32GB+ RAM) - WordPress Optimized
key_buffer_size = 512M
max_allowed_packet = 256M
thread_stack = 384K
thread_cache_size = 64
max_connections = 800
table_open_cache = 10000
table_open_cache_instances = 16
table_definition_cache = 5000
max_heap_table_size = 512M
tmp_table_size = 512M
innodb_buffer_pool_size = 24G
innodb_buffer_pool_instances = 24
innodb_log_file_size = 2G
innodb_log_buffer_size = 64M
innodb_flush_log_at_trx_commit = 1
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
# Query cache disabled (better for WordPress)
query_cache_size = 0
query_cache_type = 0

# MyISAM Settings
myisam_sort_buffer_size = 256M
read_buffer_size = 8M
read_rnd_buffer_size = 8M
join_buffer_size = 8M
sort_buffer_size = 16M

# Logging
log_error = /var/log/mysql/error.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 1
log_queries_not_using_indexes = ON

# InnoDB Settings
innodb_read_io_threads = 12
innodb_write_io_threads = 12
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
innodb_stats_on_metadata = 0
innodb_open_files = 8000
innodb_flush_neighbors = 0
innodb_lru_scan_depth = 1024

# WordPress specific optimizations
innodb_doublewrite = 1
join_buffer_size = 8M
sort_buffer_size = 16M

# Security Settings
local_infile = 0
skip-symbolic-links = 1
secure_file_priv = /var/lib/mysql-files

# Performance Schema
performance_schema = ON
performance_schema_instrument = 'wait/lock/metadata/sql/%=ON'
performance_schema_instrument = 'statement/%=ON'
performance_schema_consumer_events_statements_current = ON
performance_schema_consumer_events_statements_history = ON

[mysqld_safe]
log-error = /var/log/mysql/error.log
pid-file = /var/run/mysqld/mysqld.pid

[client]
port = 3306
socket = /var/run/mysqld/mysqld.sock 