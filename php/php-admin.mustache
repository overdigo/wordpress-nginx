[www-php{{PHP_VERSION_NO_DOT}}-admin]
user = www-data
group = www-data
listen = /run/php/php{{PHP_VERSION}}-fpm-admin.sock
listen.owner = www-data
listen.group = www-data
listen.mode = 0660
process.dumpable = no
pm = dynamic
pm.max_children = 10
pm.start_servers = 1
pm.min_spare_servers = 1
pm.max_spare_servers = 4
pm.max_spawn_rate = 2
pm.max_requests = 100
request_terminate_timeout = 600
rlimit_files = 65535
rlimit_core = 0
decorate_workers_output = no
clear_env = yes
security.limit_extensions = .php
catch_workers_output = yes
ping.path = /ping
pm.status_path = /status

; Custom values for wp-admin
php_admin_value[upload_max_filesize] = 100M
php_admin_value[post_max_size] = 100M
php_admin_value[max_execution_time] = 600
php_admin_value[max_input_time] = 600
php_admin_value[memory_limit] = 1024M

php_admin_value[open_basedir] = "/var/www/:/usr/share/php/:/var/run/nginx-cache/:/dev/urandom:/dev/shm:/var/lib/php/sessions/" 
